{{>navbar}}

<div class="container-fluid my-3">
    <div class="row">
        <div class="col-lg-6 col-md-8 col-sm-10 col-11 m-auto">
            <h5 class="bg-primary text-light text-center p-2">Recover Your Account</h5>
            <form action="/admin/forget-password-1" method="post">
                <div class="mb-3">
                    <input type="text" name="username" placeholder="Username or Email Address"
                        class="form-control {{#if show}} border-danger{{/if}}">
                    {{#if show}}
                    <p class="text-danger">User Not Found</p>
                    {{/if}}
                </div>

                <div class="mb-3">
                    <button type="submit" class="btn btn-primary w-100">Send OTP</button>
                </div>
            </form>
        </div>
    </div>
</div>

