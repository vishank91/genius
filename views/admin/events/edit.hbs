{{>header}}
{{>navbar}}

{{>breadcrum}}

<section id="admin" class="section-padding">
    <div class="container-fluid  my-3">
        <div class="row mx-3">
            <div class="col-md-3 mb-3">
                {{>sidebar}}
            </div>
            <div class="col-md-9 mb-3">
                <h5 class="bg-primary text-center p-2 text-light">Events <a href="/admin/event"><i
                            class="bi bi-arrow-left text-light float-end"></i></a></h5>
                <form action="/admin/event/update/{{data.id}}" method="post" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-12 mb-3">
                            <label>Title*</label>
                            <input type="text" name="title" placeholder="Event Title" value="{{data.title}}"
                                class="form-control {{#if errorMessage.title}} border-danger{{/if}}">
                            {{#if errorMessage.title}}
                            <p class="text-danger">{{errorMessage.title}}</p>
                            {{/if}}
                        </div>

                        <div class="col-12 mb-3">
                            <label>Short Description*</label>
                            <textarea name="shortDescription" rows="4"
                                class="form-control {{#if errorMessage.shortDescription}} border-danger{{/if}}"
                                placeholder="Short Description">{{data.shortDescription}}</textarea>
                            {{#if errorMessage.shortDescription}}
                            <p class="text-danger">{{errorMessage.shortDescription}}</p>
                            {{/if}}
                        </div>

                        <div class="col-12 mb-3">
                            <label>Long Description</label>
                            <textarea id="textEditor1" name="longDescription" rows="4"
                                placeholder="Short Description">{{data.longDescription}}</textarea>
                            {{#if errorMessage.longDescription}}
                            <p class="text-danger">{{errorMessage.longDescription}}</p>
                            {{/if}}
                        </div>

                        <div class="col-md-4 mb-3">
                            <label>Date*</label>
                            <input type="datetime-local" name="date" value="{{dateFormHelper data.date}}"
                                class="form-control {{#if errorMessage.date}} border-danger{{/if}}">
                            {{#if errorMessage.date}}
                            <p class="text-danger">{{errorMessage.date}}</p>
                            {{/if}}
                        </div>

                        <div class="col-md-4 mb-3">
                            <label>Pic</label>
                            <input type="file" name="pic"
                                class="form-control {{#if errorMessage.pic}} border-danger{{/if}}">
                            {{#if errorMessage.pic}}
                            <p class="text-danger">{{errorMessage.pic}}</p>
                            {{/if}}
                        </div>

                        <div class="col-md-4 mb-3">
                            <label>Active*</label>
                            <select name="active" class="form-control">
                                <option value="1" {{isActiveFormHelper data.active "1" }}>Yes</option>
                                <option value="0" {{isActiveFormHelper data.active "0" }}>No</option>
                            </select>
                        </div>

                        <div class="col-12 mb-3">
                            <button type="submit" class="btn btn-primary w-100">Update</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
{{>footer}}