                           <li><a target="_blank" href="{{linkedin}}"><i class="icofont-linkedin"></i></a></li>
                           <li><a target="_blank" href="{{youtube}}"><i class="icofont-youtube"></i></a></li>
                           <li><a target="_blank" href="{{instagram}}"><i class="icofont-instagram"></i></a></li>
                        </ul>
                        <div class="single-team-member-text">
                           <h4>{{name}}</h4>
                           <p>{{designation}}</p>
                        </div>
                     </div>
                  </div>
               </div>
               {{/each}}
            </div>
         </div>
      </div>
   </div>
   <!--- END CONTAINER -->
</section>
