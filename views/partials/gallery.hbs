<!-- START PORTFOLIO SECTION -->
<section id="portfolio" class="section-padding">
   <div class="auto-container">
      <div class="row">
         <div class="col-lg-7 col-md-7 col-12 mx-auto text-center">
            <div class="section-title">
               <h6 class="theme-color">We love our work</h6>
               <h2>Image Gallery</h2>
               <p>Our gallery showcases vibrant school moments, student achievements, cultural events, and joyful
                  memories captured throughout the academic year.</p>
            </div>
         </div>
      </div>

      <div class="row project-list">
         {{#each gallery}}
         <div class="col-lg-4 col-md-6 col-12 mb-lg-4 mb-md-4 mb-4 two">
            <figure class="portfolio-sin-item">
               <img class="img-fluid" src="{{pic}}" alt="" />
               <figcaption>
                  <div class="port-icon mt-3">
                     <a class="icon-ho venobox" href="{{pic}}" data-title="PORTFOLIO TITTLE"
                        data-gall="gall1"><i class="icofont-eye"></i></a>
                  </div>
               </figcaption>
            </figure>
         </div>
         <!--  end single item -->
         {{/each}}
      </div>
   </div>
   <!--- END CONTAINER -->
</section>
<!-- END PORTFOLIO SECTION -->