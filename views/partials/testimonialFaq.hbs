<!-- START TESTIMONIAL & FAQ SECTION -->
<section id="testimonial" class="section-padding overlay section-back-image" data-background="assets/img/bg/bg2.jpg">
    <div class="auto-container py-5">
        <div class="row ml-lg-4 ml-md-4 ml-0 mr-lg-4 mr-md-4 mr-0">
            <div class="col-lg-6 col-md-12 col-12 mb-lg-0 mb-md-5 mb-5">
                <div class="section-title white-title section-title-left">
                    <h2>Our Happy Parents</h2>
                </div>
                <!-- end section title -->
                <div class="owl-carousel owl-theme testimonial-wrapper">
                    {{#each testimonial}}
                    <div class="item"
                        data-dot="<img class='testimonial-thumb rounded' src='/{{pic}}'/>">
                        <div class="testimonial-inner">
                            <div class="tes-quote">
                                <i class="icofont-quote-left"></i>
                            </div>
                            <div class="tes-dec">
                                <p class="text-justify">{{message}}</p>
                                <p class="tes-author"><strong>{{name}}</strong></p>
                            </div>
                        </div>
                    </div>
                   {{/each}}
                </div>
            </div>
            <!-- end col -->
            <div class="col-lg-6 col-md-12 col-12 mt-lg-0 mt-4">
                <div class="section-title white-title section-title-left">
                    <h2>Frequently Asked Question</h2>
                </div>
                <!-- end section title -->
                <div class="panel-group faq-home-accor" id="accordion">
                    {{#each faq}}
                    <div class="panel panel-default mb-3">
                        <div class="panel-heading">
                            <h5 class="panel-title">
                                <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion"
                                    href="#panel{{_id}}">{{question}} <i
                                        class=" text-white icofont icofont-minus"></i></a>
                            </h5>
                        </div>
                        <div id="panel{{_id}}" class="panel-collapse collapse {{#if @first}}show{{/if}}">
                            <div class="panel-body text-white">
                                <p>{{answer}}</p>
                            </div>
                        </div>
                    </div>
                   {{/each}}
                </div>
            </div>
            <!-- end col -->
        </div>
        <!--  end row -->
    </div>
    <!--- END CONTAINER -->
</section>
<!-- END TESTIMONIAL & FAQ SECTION -->